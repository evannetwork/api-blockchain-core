{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "paths": {
      "bcc": ["./src/dist/index.js"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "bundles",
    "dist",
    "docs",
    "libs",
    "node_modules",
    "scripts",
    "src/**/*.spec.ts"
  ]
}
